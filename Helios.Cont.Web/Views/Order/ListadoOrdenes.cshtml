
@{
    ViewBag.Title = "Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
  UsuariosSystem = @Helios.Cont.Web.Helpers.JavaScriptConvert.SerializeObject(Model.UsuariosSistema);
</script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Pedidos
            <small>Pendientes de atención</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Pedidos</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">             
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Ordenes</h3>
                    </div>

                    <table class="table table-responsive" border="0">
                        <tr>
                            <td width="25%">
                                <select id="cboMes" class="form-control">
                                    <option id="00" value="-1">-Mes-</option>
                                    <option id="01" value="01">ENERO</option>
                                    <option id="02" value="02">FEBRERO</option>
                                    <option id="03" value="03">MARZO</option>
                                    <option id="04" value="04">ABRIL</option>
                                    <option id="05" value="05">MAYO</option>
                                    <option id="06" value="06">JUNIO</option>
                                    <option id="07" value="07">JULIO</option>
                                    <option id="08" value="08">AGOSTO</option>
                                    <option id="09" value="09">SETIEMBRE</option>
                                    <option id="10" value="10">OCTUBRE</option>
                                    <option id="11" value="11">NOVIEMBRE</option>
                                    <option id="12" value="12">DICIEMBRE</option>
                                </select>
                            </td>
                            <td width="25%">
                                <input type="number" name="Anio" id="textAnio" class="form-control" value="@DateTime.Now.Year" />
                            </td>
                            <td width="10">
                                <button id="btnConsultar" class="btn btn-success">Ver pedidos</button>
                            </td>
                            <td>
                                <button id="btnNuevo" class="btn btn-primary">Nuevo</button>
                            </td>
                           @*<td>
                                <button id="btnNuevaVenta" class="btn btn-success">Venta</button>
                            </td>*@
                        </tr>
                    </table>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="datatable" class="table table-responsive table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Fecha Pedido</th>
                                    <th>Vendedor</th>
                                    <th>Nro. Pedido</th>
                                    <th>Cliente/Comprador</th>
                                    <th>Ruc/DNI</th>
                                    <th>moneda</th>
                                    <th>Total</th>
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts
{

    <script type="text/javascript">$(document).ready(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })</script>

}


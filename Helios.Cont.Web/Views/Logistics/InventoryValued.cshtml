@model Helios.Cont.Web.Models.LogisticViewModel

@{
    ViewBag.Title = "InventoryValued";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Consultar
            <small>Inventario valorizado</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Logistica</a></li>
            <li><a href="#">Almacén</a></li>
            <li class="active">Inventario valorizado</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Listado por período</h3>
                    </div>

                    <table class="table table-responsive" border="0">
                        <tr>
                            <td width="25%">
                                <select id="comboAlmacen" class="form-control">
                                    @foreach (var al in Model.almacens.ToList())
                                    {
                                        <option id=@al.idAlmacen value=@al.idAlmacen>@al.descripcionAlmacen</option>
                                    }

                                </select>
                            </td>
                            <td width="25%">
                                <select id="comboTipoExistencia" class="form-control">
                                    <option id="00" value="01">Mercaderia</option>
                                    <option id="00" value="02">Producto terminado</option>
                                    <option id="00" value="03">Matería prima</option>
                                    <option id="00" value="04">Envases y embalajes</option>
                                </select>
                            </td>
                            <td width="10">
                                <button id="btnConsultarInventario" class="btn btn-success">Consultar</button>
                            </td>
                            @*<td>
                                    <button id="btnNuevaVenta" class="btn btn-primary">Nuevo</button>
                                </td>*@
                        </tr>
                    </table>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="dtInventarioValorizado" class="table table-responsive table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Clasificación</th>
                                        <th>Afectación</th>
                                        <th>Producto</th>
                                        <th>Tipo exist.</th>
                                        <th>U.M.</th>
                                        <th>Stock</th>
                                        <th>Costo MN.</th>
                                        <th>Cant. minima</th>
                                        <th>Cant. maxima</th>
                                        <th>status</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="6" style="text-align:right">Total:</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                            <div />

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{    

    <script src="~/Scripts/Logistic/jLogistic.js"></script>
}

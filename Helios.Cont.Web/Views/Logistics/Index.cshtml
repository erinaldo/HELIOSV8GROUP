@model Helios.Cont.Web.Models.LogisticViewModel

@{
    ViewBag.Title = "Movimientos de almacén";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Operaciones en almacén
            <small>Registro y control</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Logistica</a></li>
            <li><a href="#">Almacén</a></li>
            <li class="active">Otros movimientos</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Consultar por período</h3>
                    </div>

                    <table class="table table-responsive" border="0">
                        <tr>
                            <td width="25%">
                                <select id="cboMes" class="form-control">
                                    <option id="00" value="-1">-Mes-</option>
                                    <option id="01" value="01">ENERO</option>
                                    <option id="02" value="02">FEBRERO</option>
                                    <option id="03" value="03">MARZO</option>
                                    <option id="04" value="04">ABRIL</option>
                                    <option id="05" value="05">MAYO</option>
                                    <option id="06" value="06">JUNIO</option>
                                    <option id="07" value="07">JULIO</option>
                                    <option id="08" value="08">AGOSTO</option>
                                    <option id="09" value="09">SETIEMBRE</option>
                                    <option id="10" value="10">OCTUBRE</option>
                                    <option id="11" value="11">NOVIEMBRE</option>
                                    <option id="12" value="12">DICIEMBRE</option>
                                </select>
                            </td>
                            <td width="25%">
                                <input type="number" name="Anio" id="textAnio" class="form-control" value="2019" />
                            </td>
                            <td width="25%">
                                <select id="comboTipoOperacion" class="form-control">
                                    <option id="00" value="01">Otras entradas</option>
                                    <option id="00" value="02">Otras sálidas</option>
                                    <option id="00" value="03">Transferencias</option>
                                </select>
                            </td>
                            <td width="10">
                                <button id="btnConsultarInventario" class="btn btn-success">Consultar</button>
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        Nueva Operación
                                        <span class="caret"></span>
                                    </button>
                                    <ul id="menuoper" class="dropdown-menu">
                                        <li><a href="@Url.Action("CreateWarehouse", "Logistics")">Entrada</a></li>
                                        <li><a href="#">Sálida</a></li>
                                        <li><a href="@Url.Action("CreateWarehouseTransfer","Logistics")">Transferencia</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    </table>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="dtInventarioValorizado" class="table table-responsive table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Clasificicación</th>
                                        <th>Afectación</th>
                                        <th>Producto</th>
                                        <th>Tipo exist.</th>
                                        <th>U.M.</th>
                                        <th>Stock</th>
                                        <th>Costo MN.</th>
                                        <th>Cant. minima</th>
                                        <th>Cant. maxima</th>
                                        <th>status</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="6" style="text-align:right">Total:</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                            <div />

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{

    <script src="~/Scripts/Logistic/jLogistic.js"></script>
}

                    @*SE DIBUJA LA IMAGEN DEL TENEDOR *@

                    <div class="info-box">

                        <div class="info-box-content">
                            <br />

                            <input type="hidden" id="idMesa" name="name" value="@Model.distribucionInfraestructuras.idDistribucion" />

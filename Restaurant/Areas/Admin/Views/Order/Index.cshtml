                            <input type="hidden" id="nombreMesa" name="name5" value="@Model.distribucionInfraestructuras.descripcionDistribucion @Model.distribucionInfraestructuras.numeracion" />
                            <span id="nombreMesa" value="0" class="info-box-text" style="font-size: 3em; color:darkred">@Model.distribucionInfraestructuras.descripcionDistribucion @Model.distribucionInfraestructuras.numeracion    </span>

                        </div>

                    </div>


                    @*DIBUJA LAS MESAS

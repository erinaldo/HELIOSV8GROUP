@model Helios.Retail.Models.ItemViewModel
@{
    ViewBag.Title = "Lista de pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    UsuariosSystem = @Helios.Retail.Helpers.JavaScriptConvert.SerializeObject(Model.UsuariosSistema);   
</script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Ordenes
            <small>Registro de Pedidos activos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-safari"></i> Ordenes</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Pedidos activos</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Pedidos por atender</h3>
                    </div>

                    <table class="table table-responsive" border="0">
                        <tr>
                            <td width="25%">
                                <select id="CountryList" class="selectOrder show-tick form-control" >
                                    @*  <option id="0" value="1000">PRE VENTA</option>*@
                                    @foreach (var item in Model.ListaDistribucionInfraestructuras)
                                    {
                                        <option value="@item.idDistribucion">@item.descripcionDistribucion - @item.numeracion </option>
                                    }
                                </select>
                            </td>
                            @*<td width="25%">
                                <input type="number" name="Anio" id="textAnio" class="form-control" value="2019" />
                                <button id="btnImprimirConsumo" class="btn btn-info">Imprimir consumo</button>
                            </td>*@
                            <td width="10">
                                <button id="btnConsultar" class="btn btn-success">Consultar mesa</button>
                            </td>
                            <td>
                                <button id="btnNuevaVenta" class="btn btn-default" onclick="location.href='@Url.Action("Create", "Order")'">Nuevo</button>
                            </td>
                        </tr>
                    </table>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="datatablePedidos" class="table table-responsive table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Secuencia</th>
                                        <th>Fecha</th>
                                        <th>Vendedor</th>
                                        <th>Tipo doc.</th>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>Total</th>
                                        <th>Atención</th>
                                        <th>&nbsp;</th>
                                        <th>&nbsp;</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                            <div />

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts
{
    <script src="~/Scripts/General/orderJS.js"></script>
    @*Scripts*@
    @*@Scripts.Render("~/bundles/entities-js")*@
    @Scripts.Render("~/bundles/bootstrap-select")

    @*Styles*@
    @Styles.Render("~/Content/Bootstrap-Select/css")
}